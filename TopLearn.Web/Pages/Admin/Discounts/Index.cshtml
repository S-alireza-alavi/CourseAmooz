@page
@using TopLearn.Core.Convertors
@model TopLearn.Web.Pages.Admin.Discounts.IndexModel
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"> لیست کدهای تخفیف </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست کدهای تخفیف
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div class="col-md-12" style="margin: 10px 0;">

                            <a asp-page="CreateDiscount" class="btn btn-outline btn-success">افزودن کد تخفیف جدید</a>

                        </div>
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                            <tr>
                                <th>کد</th>
                                <th>تعداد</th>
                                <th>تاریخ شروع</th>
                                <th>تاریخ پایان</th>
                                <th>دستورات</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var discount in Model.Discounts)
                            {
                                <tr>
                                    <td>@discount.DiscountCode</td>
                                    <td>@discount.UsableCount</td>
                                    <td>@((discount.StartDate != null)?discount.StartDate.Value.ToShamsi():"")</td>
                                    <td>@((discount.EndDate != null)?discount.EndDate.Value.ToShamsi():"")</td>
                                      
                                    <td>
                                        <a href="/Admin/Discount/EditDiscount/@discount.DiscountId" class="btn btn-warning btn-sm">
                                            ویرایش
                                        </a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>