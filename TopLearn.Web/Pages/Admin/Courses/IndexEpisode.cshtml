@page
@model TopLearn.Web.Pages.Admin.Courses.IndexEpisodeModel

@{
    ViewData["Title"] = "قسمت های دوره";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست قسمت ها</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست قسمت های دوره
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="col-md-12" style="margin: 10px 0">
                    <a asp-page="CreateEpisode" asp-route-id="@ViewData["CourseId"]" class="btn btn-outline btn-success">افزودن قسمت جدید</a>
                </div>
                <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                    <thead>
                        <tr>
                            <th>عنوان قسمت</th>
                            <th>مدت زمان</th>
                            <th>رایگان</th>
                            <th>دستورات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.CourseEpisodes)
                        {
                            <tr>
                                <td>
                                    @item.EpisodeTitle
                                </td>
                                <td>
                                    @item.EpisodeTime
                                </td>
                                <td>
                                    @if (@item.IsFree)
                                    {
                                        <span class="text-success"><i class="glyphicon-ok"></i></span>
                                    }
                                    else
                                    {
                                        <span class="text-danger"><i class="glyphicon-remove"></i></span>
                                    }
                                </td>
                                <td>
                                    <a asp-page="EditEpisode" asp-route-id="@item.EpisodeId" class="btn btn-warning btn-sm">
                                        ویرایش
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>